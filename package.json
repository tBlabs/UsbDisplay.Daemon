{
    "name": "usb-display.daemon",
    "version": "1.0.0",
    "description": "USB Display driver and host",
    "main": "./bin/startup.js",
    "author": "tB",
    "license": "beerware",
    "scripts": {
        "xpreinstall": "sudo npm i -g typescript jest tslint npm-run-all nodemon",
        "serve": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./bin/startup.js --port 4444 --serial COM7 --log\"",
        "start": "node ./bin/startup.js --port 4444 --serial COM7 --log",
        "lint": "tslint -c tslint.json './src/**/*.{ts,tsx}' --format msbuild",
        "test": "jest --runInBand",
        "build": "tsc -p .",
        "clean": "rm ./bin -rf",
        "autofix": "tslint --fix --project .",
        "push": "git push origin master"
    },
    "devDependencies": {
        "@types/dotenv": "^6.1.1",
        "@types/express": "^4.17.13",
        "@types/jasmine": "^3.10.3",
        "@types/jest": "^27.4.0",
        "@types/lodash": "^4.14.178",
        "@types/node": "^17.0.13",
        "@types/serialport": "^8.0.2",
        "@types/socket.io": "^3.0.1",
        "jest": "^27.4.7",
        "moq.ts": "^7.3.4",
        "nodemon": "^2.0.15",
        "npm-check-updates": "^12.2.1",
        "npm-run-all": "^4.1.5",
        "ts-jest": "^27.1.3",
        "tsc-watch": "^4.6.0",
        "typescript": "^4.5.5"
    },
    "dependencies": {
        "asyncawait": "^3.0.0",
        "express": "^4.17.2",
        "inversify": "^6.0.1",
        "jasmine-core": "^4.0.0",
        "minimist": "^1.2.5",
        "os": "^0.1.2",
        "reflect-metadata": "^0.1.13",
        "serialport": "^9.2.8",
        "socket.io": "^4.4.1"
    }
}
