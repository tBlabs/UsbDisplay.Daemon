{
    "name": "bluepill.daemon",
    "version": "1.0.0",
    "description": "BluePill driver and host",
    "main": "./bin/startup.js",
    "author": "tB",
    "license": "beerware",
    "scripts": {
        "xpreinstall": "sudo npm i -g typescript jest tslint npm-run-all",
        "start": "node ./bin/startup.js",
        "run": "npm run clean && npm run build && clear && npm run start",
        "autotranspilation": "tsc --watch",
        "autorun": "nodemon ./bin/startup.js --port 3001 --serial /dev/ttyUSB0 --log",
        "serve": "npm run clean && run-p autotranspilation autorun",
        "lint": "tslint -c tslint.json './src/**/*.{ts,tsx}' --format msbuild",
        "test": "jest --runInBand",
        "build": "tsc -p .",
        "clean": "rm ./bin -rf",
        "autofix": "tslint --fix --project .",
        "push": "git push origin master"
    },
    "devDependencies": {
        "@types/dotenv": "^6.1.0",
        "@types/express": "^4.16.0",
        "@types/jasmine": "^3.0.0",
        "@types/jest": "^23.3.9",
        "@types/lodash": "^4.14.118",
        "@types/node": "^10.12.9",
        "@types/serialport": "^7.0.0",
        "@types/socket.io": "^2.1.0",
        "jest": "^23.6.0",
        "moq.ts": "^2.7.3",
        "nodemon": "^1.18.6",
        "npm-check-updates": "^2.14.3",
        "npm-run-all": "^4.1.3",
        "ts-jest": "^23.10.4",
        "typescript": "^3.1.6"
    },
    "dependencies": {
        "asyncawait": "^1.0.7",
        "express": "^4.16.4",
        "inversify": "^5.0.1",
        "jasmine-core": "^3.3.0",
        "minimist": "^1.2.0",
        "os": "^0.1.1",
        "reflect-metadata": "^0.1.12",
        "serialport": "^7.0.2",
        "socket.io": "^2.1.1"
    }
}
